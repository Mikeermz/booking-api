{
	"env": {
		"commonjs": true,
		"es2021": true,
		"node": true
	},
	"extends": ["prettier", "airbnb-base"],
	"plugins": ["prettier"],
	"overrides": [],
	"parserOptions": {
		"ecmaVersion": "latest"
	},
	"rules": {
		"no-console": "off",
		"indent": [2, "tab"],
		"no-tabs": 0,
		"prettier/prettier": ["error", { "semi": true, "useTabs": true }],
		"import/no-extraneous-dependencies": [
			"error",
			{
				"devDependencies": false,
				"optionalDependencies": false,
				"peerDependencies": false
			}
		]
	}
}
